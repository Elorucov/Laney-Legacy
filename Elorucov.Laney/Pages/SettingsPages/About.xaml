<Page
    x:Class="Elorucov.Laney.Pages.SettingsPages.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Pages.SettingsPages"
    xmlns:ctrls="using:Elorucov.Laney.Controls"
    xmlns:wuix="using:Elorucov.Laney.Controls.WinUI"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="PageLoaded" Margin="24,0" MaxWidth="1048">

    <Page.Resources>
        <Storyboard x:Name="EEAnmation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LogoRotate" Storyboard.TargetProperty="Angle">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-12">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="16">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-8">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.65" Value="4">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.73" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.RowSpan="2">
            <StackPanel Margin="0,0,0,16">
                <StackPanel x:Name="LogoContainer" Orientation="Horizontal" Margin="0,0,0,24" HorizontalAlignment="Center">
                    <Grid Width="90" Height="90" Margin="8,0" Tapped="LogoTapped">
                        <!-- Когда-то те 3 Rectangle-ы были Ellipse-ми, но ThemeShadow рендерила квадратную тень, поэтому имеет то, что имеем. ¯\_(ツ)_/¯ -->
                        <Rectangle x:Name="LogoEllipseShadow" Width="90" Height="90" RadiusX="45" RadiusY="45" Fill="{ThemeResource VKBackgroundContentBrush}"/>
                        <Rectangle x:Name="LogoEllipse" Width="90" Height="90" RadiusX="45" RadiusY="45" Fill="{ThemeResource SolidBackgroundFillColorBaseBrush}"/>
                        <Rectangle x:Name="LogoEllipseLayerFill" Width="90" Height="90" RadiusX="45" RadiusY="45" Fill="{ThemeResource LayerFillColorAltBrush}"/>
                        <Viewbox Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform">
                            <Viewbox.RenderTransform>
                                <RotateTransform x:Name="LogoRotate" CenterX="32" CenterY="0"/>
                            </Viewbox.RenderTransform>
                            <ContentPresenter ContentTemplate="{StaticResource LogoTemplate}"/>
                        </Viewbox>
                    </Grid>
                    <Viewbox Width="123" Height="56" VerticalAlignment="Center" Margin="8,0,0,0">
                        <ContentPresenter ContentTemplate="{StaticResource LogoTextual}"/>
                    </Viewbox>
                </StackPanel>
                <wuix:SettingsGroup>
                    <muxc:InfoBar x:Name="NonReleaseInfo" x:DeferLoadStrategy="Lazy" IsOpen="True" IsClosable="False" Severity="Warning"/>
                    <muxc:InfoBar x:Name="DeviceFamilyInfo" x:DeferLoadStrategy="Lazy" IsOpen="True" IsClosable="False" Severity="Informational"/>
                    <wuix:SettingsCard x:Uid="about2_version">
                        <wuix:SettingsCard.HeaderIcon>
                            <ctrls:FixedFontIcon Glyph=""/>
                        </wuix:SettingsCard.HeaderIcon>
                        <TextBlock x:Name="AppVersion" FontSize="14" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    </wuix:SettingsCard>
                    <wuix:SettingsCard x:Uid="about2_builddate">
                        <wuix:SettingsCard.HeaderIcon>
                            <ctrls:FixedFontIcon Glyph=""/>
                        </wuix:SettingsCard.HeaderIcon>
                        <TextBlock x:Name="BuildDate" FontSize="14" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    </wuix:SettingsCard>
                </wuix:SettingsGroup>
                <wuix:SettingsGroup x:Uid="about2_useful_links">
                    <wuix:SettingsCard x:Uid="about2_community">
                        <wuix:SettingsCard.HeaderIcon>
                            <ctrls:FixedFontIcon Glyph=""/>
                        </wuix:SettingsCard.HeaderIcon>
                        <wuix:SettingsCard.Description>
                            <ctrls:WrapPanel>
                                <HyperlinkButton Tag="https://vk.ru/club171015120" Click="OpenLink" x:Uid="about2_open_group"/>
                            </ctrls:WrapPanel>
                        </wuix:SettingsCard.Description>
                    </wuix:SettingsCard>
                    <wuix:SettingsCard Header="Source code" IsClickEnabled="True" Tag="https://github.com/Elorucov/Laney-Legacy" Click="OpenLink">
                        <wuix:SettingsCard.HeaderIcon>
                            <ctrls:FixedFontIcon Glyph=""/>
                        </wuix:SettingsCard.HeaderIcon>
                    </wuix:SettingsCard>
                    <wuix:SettingsCard x:Uid="about2_vk">
                        <wuix:SettingsCard.HeaderIcon>
                            <PathIcon Width="16" Height="16" Data="M 8.812701,13.030856 C 3.4076701,13.030856 0.1284948,9.253041 0,2.969 H 2.7374845 C 2.8227625,7.585082 4.905402,9.536258 6.501773,9.938567 V 2.969 H 9.125278 V 6.955144 C 10.665072,6.783103 12.276948,4.9686701 12.818639,2.969 h 2.582103 C 14.987546,5.4278866 13.232825,7.234402 11.993072,7.981948 13.233814,8.58599 15.230186,10.16966 16,13.030856 H 13.161897 C 12.562639,11.118278 11.094598,9.644629 9.126103,9.443557 v 3.587299 z"/>
                        </wuix:SettingsCard.HeaderIcon>
                        <wuix:SettingsCard.Description>
                            <ctrls:WrapPanel>
                                <HyperlinkButton Tag="https://vk.ru/privacy" Click="OpenLink" x:Uid="about2_privacy"/>
                                <TextBlock Margin="6,0" FontWeight="SemiBold" Text="·"/>
                                <HyperlinkButton Tag="https://vk.ru/terms" Click="OpenLink" x:Uid="about2_terms"/>
                            </ctrls:WrapPanel>
                        </wuix:SettingsCard.Description>
                    </wuix:SettingsCard>
                    <wuix:SettingsExpander x:Uid="about2_libs">
                        <wuix:SettingsExpander.HeaderIcon>
                            <ctrls:FixedFontIcon Glyph=""/>
                        </wuix:SettingsExpander.HeaderIcon>
                        <wuix:SettingsExpander.Items>
                            <wuix:SettingsCard ContentAlignment="Vertical" HorizontalContentAlignment="Left">
                                <TextBlock FontWeight="SemiBold" Margin="16,12,16,0" Style="{StaticResource BodyTextBlockStyle}">
                                    <Hyperlink NavigateUri="https://github.com/CommunityToolkit/Windows/tree/main/components/SettingsControls/src">CommunityToolkit.Uwp.Controls.SettingsControls</Hyperlink><LineBreak/>
                                    <Hyperlink NavigateUri="https://github.com/microsoft/fluentui-system-icons/blob/master/LICENSE">Fluent UI System Icons</Hyperlink><LineBreak/>
                                    <Hyperlink NavigateUri="https://github.com/JamesNK/Newtonsoft.Json/blob/master/LICENSE.md">Json.NET</Hyperlink><LineBreak/>
                                    <Hyperlink NavigateUri="https://github.com/CommunityToolkit/WindowsCommunityToolkit">Microsoft.Toolkit.Uwp.Notifications</Hyperlink><LineBreak/>
                                    <Hyperlink NavigateUri="https://github.com/WindowsNotifications/QueryString.NET/blob/master/LICENSE">QueryString.NET</Hyperlink><LineBreak/>
                                    <Hyperlink NavigateUri="https://github.com/FrayxRulez/RLottie.UWP">RLottie.UWP</Hyperlink><LineBreak/>
                                    <Hyperlink NavigateUri="http://www.microsoft.com/web/webpi/eula/eula_win2d_10012014.htm">Win2D</Hyperlink><LineBreak/>
                                    <Hyperlink NavigateUri="https://github.com/microsoft/microsoft-ui-xaml/blob/main/LICENSE">WinUI</Hyperlink><LineBreak/>
                                    <Hyperlink NavigateUri="https://github.com/jenius-apps/common">MicrosoftStoreUpdater from JeniusApps.Common.Tools.Uwp</Hyperlink><LineBreak/>
                                </TextBlock>
                            </wuix:SettingsCard>
                        </wuix:SettingsExpander.Items>
                    </wuix:SettingsExpander>
                </wuix:SettingsGroup>
                <TextBlock x:Name="thing" FontSize="13" Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" Margin="1,8,0,0"/>
            </StackPanel>
        </ScrollViewer>
        <Grid Height="48" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <HyperlinkButton x:Name="BackButton" x:Uid="backButton" Width="36" Height="36" Padding="0" Click="BackButton_Click">
                <ctrls:FixedFontIcon FontSize="20" Glyph=""/>
            </HyperlinkButton>
        </Grid>
    </Grid>
</Page>
