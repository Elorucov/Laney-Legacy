<UserControl
    x:Class="Elorucov.Laney.Controls.MessageAttachments.VoiceMessageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Controls.MessageAttachments"
    xmlns:vkui="using:VK.VKUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="256"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        <Grid Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <HyperlinkButton BorderThickness="0" Padding="0" Click="PlayPauseButtonClicked">
                <Border Height="40" Width="40" CornerRadius="20" BorderThickness="2" BorderBrush="{ThemeResource AlternativeMessageControlForegroundAccentBrush}">
                    <ContentPresenter x:Name="IconPresenter" Height="24" Width="24" Foreground="{ThemeResource AlternativeMessageControlForegroundAccentBrush}" ContentTemplate="{StaticResource Icon24Play}"/>
                </Border>
            </HyperlinkButton>
            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                <Grid x:Name="WaveContainer" Height="26">
                    <Canvas x:Name="BackgroundSoundWave" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.5"/>
                    <Canvas x:Name="ForegroundSoundWave" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Border x:Name="Seeker" Background="Transparent" PointerPressed="Seeker_PointerPressed"/>
                </Grid>
                <TextBlock x:Name="Duration" Margin="0,0,0,0" FontSize="12" Foreground="{ThemeResource AlternativeMessageControlForegroundAccentBrush}" MaxLines="1" Text="-:--"/>
            </StackPanel>
            <Button x:Name="TranscriptButton" Grid.Column="2" Visibility="Collapsed" Width="36" Height="26" Margin="8,0,0,0" Padding="0" VerticalAlignment="Top" Style="{StaticResource VKButtonSecondaryMedium}" Foreground="{ThemeResource AlternativeAccentBrush}" Click="ShowTranscript">
                <vkui:VKIcon Id="Icon24TextOutline" Margin="2" Width="24" Height="24"/>
            </Button>
        </Grid>
        <Border x:Name="TranscriptContainer" Margin="0,8,0,0" BorderThickness="2,0,0,0" BorderBrush="{ThemeResource AlternativeAccentBrush}" Visibility="Collapsed">
            <TextBlock x:Name="TranscriptText" Padding="8,0,0,0" TextWrapping="Wrap"/>
        </Border>
    </StackPanel>
</UserControl>