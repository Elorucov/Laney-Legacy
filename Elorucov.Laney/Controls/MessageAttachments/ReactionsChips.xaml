<UserControl
    x:Class="Elorucov.Laney.Controls.MessageAttachments.ReactionsChips"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="using:Elorucov.Laney.Controls"
    xmlns:elor="using:Elorucov.Toolkit.UWP.Controls"
    xmlns:mdl="using:Elorucov.Laney.Models"
    xmlns:converters="using:Elorucov.Laney.Services.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="Root"
    MinHeight="30">

    <UserControl.Resources>
        <converters:ReactionChipMembersConverter x:Key="rcmc"/>
        <converters:ReactionChipContentVisibilityConverter x:Key="rccc"/>
        <Style x:Key="GVIStyle" TargetType="GridViewItem">
            <Setter Property="MinWidth" Value="0" />
            <Setter Property="MinHeight" Value="0" />
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewItem">
                        <Border x:Name="ChipRoot" Height="{TemplateBinding Height}" CornerRadius="15" Padding="8,0" Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="ChipRoot" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <PointerDownThemeAnimation Storyboard.TargetName="ChipRoot" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ChipRoot" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundAccentBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ChipContent" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#FFF" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ChipContent" Foreground="{TemplateBinding Foreground}" Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IncomingGVIStyle" TargetType="GridViewItem" BasedOn="{StaticResource GVIStyle}">
            <Style.Setters>
                <Setter Property="Background" Value="{ThemeResource VKImBubbleIncomingHighlightedBrush}" />
            </Style.Setters>
        </Style>

        <Style x:Key="OutgoingGVIStyle" TargetType="GridViewItem" BasedOn="{StaticResource GVIStyle}">
            <Style.Setters>
                <Setter Property="Background" Value="{ThemeResource VKImBubbleOutgoingHighlightedBrush}" />
            </Style.Setters>
        </Style>

        <Style x:Key="DarkGVIStyle" TargetType="GridViewItem" BasedOn="{StaticResource GVIStyle}">
            <Style.Setters>
                <Setter Property="Background" Value="#5A000000" />
                <Setter Property="Foreground" Value="#FFF" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <GridView x:Name="ChipsGV" Margin="0,0,0,-10" IsItemClickEnabled="True" ItemClick="ChipsGV_ItemClick" SelectionMode="Single" ItemContainerStyle="{StaticResource IncomingGVIStyle}" ItemsSource="{Binding Reactions}">
        <GridView.ItemContainerTransitions>
            <TransitionCollection>
                <AddDeleteThemeTransition/>
                <ReorderThemeTransition/>
                <RepositionThemeTransition/>
            </TransitionCollection>
        </GridView.ItemContainerTransitions>
        <GridView.ItemsPanel>
            <ItemsPanelTemplate>
                <ctrls:WrapPanel HorizontalSpacing="4" VerticalSpacing="4"/>
            </ItemsPanelTemplate>
        </GridView.ItemsPanel>
        <GridView.Style>
            <Style TargetType="GridView">
                <Setter Property="MinHeight" Value="0"/>
            </Style>
        </GridView.Style>
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="mdl:Reaction">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" ToolTipService.ToolTip="{Binding MembersNames, Mode=OneWay}">
                    <Image Width="22" Height="22" Stretch="Uniform" DataContextChanged="Image_DataContextChanged"/>
                    <Grid MinWidth="16" Height="22">
                        <TextBlock Visibility="{x:Bind Members, Mode=OneWay, Converter={StaticResource rccc}, ConverterParameter='L'}" TextAlignment="Center" Margin="0,-1,0,0" VerticalAlignment="Center" Text="{x:Bind Count, Mode=OneWay}"/>
                        <elor:UserAvatars Visibility="{x:Bind Members, Mode=OneWay, Converter={StaticResource rccc}}" VerticalAlignment="Center" Height="18" Margin="4,0,0,0" Avatars="{x:Bind Members, Mode=OneWay, Converter={StaticResource rcmc}}"/>
                    </Grid>
                </StackPanel>
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>
</UserControl>
