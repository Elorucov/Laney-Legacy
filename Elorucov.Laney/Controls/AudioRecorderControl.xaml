<UserControl
    x:Class="Elorucov.Laney.Controls.AudioRecorderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="48"
    d:DesignWidth="320" Visibility="Collapsed">

    <UserControl.Resources>
        <Storyboard x:Name="PanelShow">
            <DoubleAnimation Storyboard.TargetName="PanelTransform" Storyboard.TargetProperty="TranslateY" From="48" To="0" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="PanelHide" Completed="PanelHide_Completed">
            <DoubleAnimation Storyboard.TargetName="PanelTransform" Storyboard.TargetProperty="TranslateY" From="0" To="48" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent">
        <Grid Height="48" VerticalAlignment="Bottom" Background="{ThemeResource VKUIWebWriteBarBrush}">
            <Grid.RenderTransform>
                <CompositeTransform x:Name="PanelTransform"/>
            </Grid.RenderTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <HyperlinkButton x:Name="closeBtn" Grid.Column="0" Width="48" Height="48" Padding="0" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="{ThemeResource WriteBarIconBrush}" Content="&#xE10A;" FontSize="16" Click="Close"/>
            <HyperlinkButton x:Name="stopBtn" Grid.Column="1" Width="48" Height="48" Padding="0" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="{ThemeResource WriteBarIconBrush}" Content="&#xE15B;" FontSize="16" Visibility="Collapsed" Click="StopRecord"/>
            <HyperlinkButton x:Name="playBtn" Grid.Column="1" Width="48" Height="48" Padding="0" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="{ThemeResource WriteBarIconBrush}" Content="&#xE102;" FontSize="16" Visibility="Collapsed" Click="PlayButton"/>
            <HyperlinkButton x:Name="pauseBtn" Grid.Column="1" Width="48" Height="48" Padding="0" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="{ThemeResource WriteBarIconBrush}" Content="&#xE103;" FontSize="16" Visibility="Collapsed" Click="PauseButton"/>
            <HyperlinkButton x:Name="doneBtn" Grid.Column="3" Width="48" Height="48" Padding="0" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="{ThemeResource WriteBarIconBrush}" Content="&#xE10B;" FontSize="16" IsEnabled="False" Click="Done"/>
            <StackPanel x:Name="RecordView" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="RecInfo" FontSize="14" Margin="0,-1,0,0"/>
            </StackPanel>
            <Grid x:Name="PlayerContainer" Grid.Column="2" Visibility="Collapsed"/>
        </Grid>
    </Border>
</UserControl>