<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style x:Key="VKErrorTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource VKDestructiveBrush}"/>
    </Style>

    <Style x:Key="FullWindowTitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource VKSansDisplayBold}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="LineHeight" Value="31"/>
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
    </Style>

    <Style x:Key="TitleBarTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource VKSansDisplayBold}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="Padding" Value="0,5,0,0"/>
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{ThemeResource VKHeaderTextBrush}"/>
    </Style>

    <Style x:Key="ModalTitleBarTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource VKSansDisplayBold}"/>
        <Setter Property="FontSize" Value="19"/>
        <Setter Property="LineHeight" Value="19"/>
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{ThemeResource VKHeaderTextBrush}"/>
    </Style>

    <Style x:Key="ModalTitleBarComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource VKComboBox}">
        <Setter Property="FontFamily" Value="{StaticResource VKSansDisplayBold}"/>
        <Setter Property="FontSize" Value="19"/>
        <Setter Property="Foreground" Value="{ThemeResource VKHeaderTextBrush}"/>
    </Style>
</ResourceDictionary>
