<local:SettingsPageBase
    x:Class="Elorucov.Laney.Views.Settings.Interface"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Views.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vkui="using:VK.VKUI.Controls"
    xmlns:prim="using:Elorucov.Laney.Controls.Primitives"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <prim:AppearancePreview Height="220"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16,0">
                <vkui:CellButton Text="{x:Bind Converter={StaticResource loc}, ConverterParameter=appearance_conv_backgrounds}" Click="GoToBackgroundPicker"/>

                <vkui:Group Header="{x:Bind Converter={StaticResource loc}, ConverterParameter=appearance_theme}">
                    <StackPanel>
                        <!--<RadioButton Style="{ThemeResource VKRadioButton}" Margin="0,0,0,12" GroupName="theme" Tag="0" IsChecked="{Binding CurrentTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource vtb}, ConverterParameter=0}" Content="{x:Bind Converter={StaticResource loc}, ConverterParameter=appearance_theme_auto}"/>-->
                        <RadioButton Style="{ThemeResource VKRadioButton}" Margin="0,0,0,12" GroupName="theme" Tag="1" IsChecked="{Binding CurrentTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource vtb}, ConverterParameter=1}" Content="{x:Bind Converter={StaticResource loc}, ConverterParameter=appearance_theme_sys}"/>
                        <RadioButton Style="{ThemeResource VKRadioButton}" Margin="0,0,0,12" GroupName="theme" Tag="2" IsChecked="{Binding CurrentTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource vtb}, ConverterParameter=2}" Content="{x:Bind Converter={StaticResource loc}, ConverterParameter=appearance_theme_light}"/>
                        <RadioButton Style="{ThemeResource VKRadioButton}" Margin="0,0,0,12" GroupName="theme" Tag="3" IsChecked="{Binding CurrentTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource vtb}, ConverterParameter=3}" Content="{x:Bind Converter={StaticResource loc}, ConverterParameter=appearance_theme_dark}"/>
                    </StackPanel>
                </vkui:Group>
                <vkui:Group Header="{x:Bind Converter={StaticResource loc}, ConverterParameter=appearance_fontsize}">
                    <StackPanel>
                        <Slider Minimum="13" Maximum="17" Value="{Binding FontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickPlacement="Outside"/>
                    </StackPanel>
                </vkui:Group>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</local:SettingsPageBase>