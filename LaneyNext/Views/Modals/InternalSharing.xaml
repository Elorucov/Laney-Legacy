<elor:Modal
    x:Class="Elorucov.Laney.Views.Modals.InternalSharing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Views.Modals"
    xmlns:elor="using:Elorucov.Toolkit.UWP.Controls"
    xmlns:vkui="using:VK.VKUI.Controls"
    xmlns:vk="using:ELOR.VKAPILib.Objects"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource VKUIDefaultModalStyle}" Template="{StaticResource VKUITabModalTemplate}" Background="{ThemeResource VKBackgroundContentBrush}" Padding="0" Margin="0" MaxWidth="520">

    <Grid Height="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Height="52">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="52"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="SharingTypeTitle" Style="{StaticResource ModalTitleBarTextStyle}" Padding="16,3,0,0" FontSize="17" LineHeight="17"/>
            <ComboBox Grid.Column="1" Style="{StaticResource ModalTitleBarComboBoxStyle}" Margin="-13,4,0,4" HorizontalAlignment="Left" FontSize="17" Background="Transparent" BorderThickness="0" ItemsSource="{Binding ComboBoxItems}" SelectedItem="{Binding SelectedComboBoxItem, Mode=TwoWay}" Visibility="{Binding IsGroupSession, Converter={StaticResource ntv}}"/>
        </Grid>
        <TextBox Grid.Row="1" Style="{StaticResource VKSearchBar}" InputScope="Search" Margin="16,0,16,8" Height="36" BorderThickness="0" Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="{x:Bind Converter={StaticResource loc}, ConverterParameter=search}" PreviewKeyDown="SearchBoxKeyDown"/>
        <ListView Grid.Row="2" SelectionMode="None" ItemsSource="{Binding Conversations}" ItemTemplate="{StaticResource ConversationDataTemplateLite}" ItemContainerStyle="{StaticResource CommonListViewItemStyle}" IsItemClickEnabled="True" ItemClick="ConvSelected"/>
        <vkui:Placeholder Grid.Row="2" VerticalAlignment="Stretch" 
                          Visibility="{Binding Placeholder, Converter={StaticResource ntv}}"
                          IconTemplate="{Binding Placeholder, Converter={StaticResource pic}}" 
                          Header="{Binding Placeholder.Header}"
                          Content="{Binding Placeholder.Content}"
                          ActionButtonText="{Binding Placeholder.ActionButton}"
                          ActionButtonCommand="{Binding Placeholder.ActionButtonCommand}"/>
        <vkui:Spinner Grid.Row="2" Width="44" Height="44" Margin="36" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{ThemeResource VKHeaderTintBrush}" Visibility="{Binding IsLoading}"/>
    </Grid>
</elor:Modal>
