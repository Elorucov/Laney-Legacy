<UserControl
    x:Class="Elorucov.Laney.Controls.Attachments.StoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Controls.Attachments"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button Style="{StaticResource TransparentButtonStyle}" Padding="0" Width="124" Height="220" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Click="HandleClick">
        <Border x:Name="ImageContainer" RequestedTheme="Dark" Background="#5f5f5f" CornerRadius="16">
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Color="#a0000000" Offset="0"/>
                            <GradientStop Color="#12000000" Offset="0.5"/>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="38"/>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Top" TextWrapping="Wrap" Margin="12,8,12,6" FontSize="12" MaxLines="4">
                    <Run x:Name="StoryStatus"/>
                    <LineBreak/><Run x:Name="StoryAuthor" FontWeight="SemiBold"/>
                </TextBlock>
                <StackPanel x:Name="StoryRestriction" Grid.Row="1" Margin="12,0,12,0" Visibility="Collapsed" VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" Width="24" Height="24" ContentTemplate="{StaticResource Icon12Lock}"/>
                    <TextBlock x:Name="StoryRestrictionText" TextWrapping="Wrap" TextAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
    </Button>
</UserControl>
