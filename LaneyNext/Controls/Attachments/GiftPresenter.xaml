<UserControl
    x:Class="Elorucov.Laney.Controls.Attachments.GiftPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Controls.Attachments"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="168"
    d:DesignWidth="168">

    <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="0" Style="{StaticResource TransparentButtonStyle}">
        <StackPanel>
            <Border x:Name="GiftImageContainer" Background="White" CornerRadius="14">
                <Image x:Name="GiftImage" Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Image.Source>
                        <BitmapImage x:Name="img" DecodePixelType="Logical"/>
                    </Image.Source>
                </Image>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="44">
                <ContentPresenter Foreground="{ThemeResource VKImBubbleGiftTextBrush}" ContentTemplate="{StaticResource Icon16Gift}" Width="16" Height="16" VerticalAlignment="Center"/>
                <TextBlock Margin="8,0,0,0" VerticalAlignment="Center" FontSize="12" Foreground="{ThemeResource VKImBubbleGiftTextBrush}" Text="{x:Bind Converter={StaticResource loc}, ConverterParameter=msg_attachment_gift}"/>
            </StackPanel>
        </StackPanel>
    </Button>
</UserControl>
