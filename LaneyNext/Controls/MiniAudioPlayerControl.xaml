<UserControl
    x:Class="Elorucov.Laney.Controls.MiniAudioPlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vkui="using:VK.VKUI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="36"
    d:DesignWidth="320">

    <Grid Height="36">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource TransparentButtonStyle}" Width="36" Height="36" Padding="6" Command="{Binding PlayPauseCommand}" Visibility="{Binding IsPlaying, Converter={StaticResource ntv2}}">
            <vkui:VKIcon Id="Icon24Play" Foreground="{ThemeResource VKAccentBrush}"/>
        </Button>
        <Button Style="{StaticResource TransparentButtonStyle}" Width="36" Height="36" Padding="6" Command="{Binding PlayPauseCommand}" Visibility="{Binding IsPlaying}">
            <vkui:VKIcon Id="Icon24Pause" Foreground="{ThemeResource VKAccentBrush}"/>
        </Button>
        <Button Style="{StaticResource TransparentButtonStyle}" HorizontalAlignment="Stretch" Height="36" Padding="0" Grid.Column="1" Click="InvokeClick">
            <StackPanel>
                <TextBlock TextAlignment="Center" Foreground="{ThemeResource VKTextPrimaryBrush}" FontSize="13" LineHeight="15" LineStackingStrategy="BlockLineHeight" FontWeight="SemiBold" Text="{Binding CurrentSong.Title}"/>
                <TextBlock TextAlignment="Center" Foreground="{ThemeResource VKTextPrimaryBrush}" FontSize="11" LineHeight="15" LineStackingStrategy="BlockLineHeight" Text="{Binding CurrentSong.Performer}"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource TransparentButtonStyle}" Width="36" Height="36" Padding="6" Grid.Column="2" Click="InvokeCloseButtonClicked">
            <vkui:VKIcon Id="Icon24Cancel" Foreground="{ThemeResource VKAccentBrush}"/>
        </Button>
    </Grid>
</UserControl>
