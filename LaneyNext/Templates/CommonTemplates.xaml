<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elorucov.Laney.Templates">
    <DataTemplate x:Key="TextLikeHyperlinkBtnTemplate">
        <TextBlock Foreground="{ThemeResource VKTextPrimaryBrush}" Text="{Binding}"/>
    </DataTemplate>

    <DataTemplate x:Key="FoundMessagesGroupHeaderTemplate">
        <ContentControl Template="{StaticResource VKUIGroupHeaderTemplate}" Content="{Binding Key, Converter={StaticResource dts}, ConverterParameter='d'}"/>
    </DataTemplate>

    <DataTemplate x:Key="FriendsGroupHeaderTemplate">
        <ContentControl Margin="0,8,0,0" Template="{StaticResource VKUIGroupHeaderTemplate}" Content="{Binding Key}"/>
    </DataTemplate>

    <DataTemplate x:Key="GroupHeaderWithIconTemplate">
        <Grid BorderBrush="{ThemeResource VKSeparatorAlphaBrush}" BorderThickness="0,1,0,0" Margin="16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ContentPresenter ContentTemplate="{Binding IconTemplate}" Width="28" Height="28" VerticalAlignment="Center" Margin="0,10,12,10"/>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="15" Foreground="{ThemeResource VKTextPrimaryBrush}" Text="{Binding Key}" />
        </Grid>
    </DataTemplate>

    <ControlTemplate x:Key="VKUIGroupHeaderTemplate" TargetType="ContentControl">
        <Border Height="36" BorderBrush="{ThemeResource VKSeparatorAlphaBrush}" BorderThickness="0,1,0,0" Margin="16,0">
            <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" FontSize="15" Foreground="{ThemeResource VKTextSubheadBrush}" Text="{TemplateBinding Content}" />
        </Border>
    </ControlTemplate>
</ResourceDictionary>
